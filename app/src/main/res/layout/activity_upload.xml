<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/upload_trainess_information"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/uploadTraineeName"
            android:background="@drawable/orange_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Trainee Name"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/orange" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/contactNumber"
            android:background="@drawable/orange_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Contact Number"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/orange" />
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/eirCode"
            android:background="@drawable/orange_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Eircode"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/orange" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/gardianName"
            android:background="@drawable/orange_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Gardian Name"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:textColor="@color/orange" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/saveButtom"
            android:text="Save"
            android:backgroundTint="@color/orange"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cornerRadius = "20dp"/>

    </LinearLayout>

</LinearLayout>