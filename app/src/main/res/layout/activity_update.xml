<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/update_trainess_information"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/referContactNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/orange_border"
            android:gravity="start|center_vertical"
            android:hint="Enter Contact Number"
            android:padding="16dp"
            android:textColor="@color/orange" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/updateTraineeName"
            android:background="@drawable/orange_border"
            android:hint="Enter Trainee Name"
            android:padding="16dp"
            android:textColor="@color/orange"
            android:gravity="start|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/updateEirCode"
            android:background="@drawable/orange_border"
            android:hint="Enter Eircode"
            android:padding="16dp"
            android:textColor="@color/orange"
            android:gravity="start|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/updateGardianName"
            android:background="@drawable/orange_border"
            android:hint="Enter Gardian Name"
            android:padding="16dp"
            android:textColor="@color/orange"
            android:gravity="start|center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/updateButtom"
            android:text="Update"
            android:backgroundTint="@color/orange"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>